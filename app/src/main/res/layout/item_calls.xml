<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCallsMainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemCallsImageView"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:src="@mipmap/ic_contact_placeholder"
        app:riv_corner_radius="30dip" />

    <RelativeLayout
        android:id="@+id/itemCallsRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/itemCallsImageView">

        <TextView
            android:id="@+id/itemCallsTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_placeholder"
            android:textColor="@color/object_text_color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemCallsTvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemCallsTvName"
            android:layout_marginTop="4dp"
            android:text="@string/phone_number_placeholder"
            android:textColor="@color/object_text_color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemCallsTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemCallsTvNumber"
            android:layout_marginTop="4dp"
            android:text="@string/time_placeholder" />

        <ImageView
            android:id="@+id/itemCallsType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp" />
    </RelativeLayout>

    <View
        android:id="@+id/repo_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/itemCallsRelativeLayout"
        android:layout_below="@+id/itemCallsRelativeLayout"
        android:background="@color/separator_grey" />


</RelativeLayout>